<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".AddFriendsActivity">

    <LinearLayout 
    android:id="@+id/toprow_friendname" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
   
		<TextView
	        android:id="@+id/friend_name_caption"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Name:"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
   	    <EditText
	        android:id="@+id/friend_name"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:maxLength="10"
	        />
   	   
	    <Button
	        android:id="@+id/add_this_friend"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/add_this_friend"
	        android:onClick="handleButtonAddaFriend"
	        android:enabled="true" />

   </LinearLayout>
   
    <LinearLayout 
    android:id="@+id/nextrow_friendfp" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
   
		<TextView
	        android:id="@+id/friend_fp_caption"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="FP:"
	        android:textSize="10sp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
   	    <EditText
	        android:id="@+id/friend_fp"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:maxLines="2"
	        android:inputType="textMultiLine"
	        />

   </LinearLayout>

    <LinearLayout 
    android:id="@+id/nextrow_friendpuk" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"
    android:orientation="vertical">
   
		<TextView
	        android:id="@+id/friend_puk_caption"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Pubkey:"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
   	    <EditText
	        android:id="@+id/friend_puk"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8sp"
	        android:maxLines="50"
	        android:inputType="textMultiLine"
	        />

   </LinearLayout>
    
</LinearLayout>