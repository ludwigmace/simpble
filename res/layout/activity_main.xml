<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout 
    android:id="@+id/toprow_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
   
		<TextView
	        android:id="@+id/your_name_caption"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="You:"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
   	    <EditText
	        android:id="@+id/your_name"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:maxLength="18"
	        />

   </LinearLayout>
   
        <LinearLayout 
    android:id="@+id/actions_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
   
	    <Button
	        android:id="@+id/be_a_friend"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/be_a_friend"
	        android:onClick="handleButtonBeAFriend"
	        android:enabled="true" />
        
	    <Button
	        android:id="@+id/find_a_friend"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/find_a_friend"
	        android:onClick="handleButtonFindAFriend"
	        android:enabled="true" />

	    <Button
	        android:id="@+id/toggle_busy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/caption_toggle_busy"
	        android:onClick="handleButtonToggleBusy"
	        android:enabled="true" />
	    	    
	    <Button
	        android:id="@+id/pullmsgs"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/msgs_pull"
	        android:onClick="handleButtonPull"
	        android:enabled="true" />
	    
		<Button
	        android:id="@+id/startpair"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/msgs_startpair"
	        android:onClick="handleButtonStartPair"
	        android:enabled="true" />

   </LinearLayout>
   
     
	
	<LinearLayout 
    android:id="@+id/status_text" 
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent">
	    
            
	    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/status_log"
        android:text="@string/status_log"
        android:textIsSelectable="true" />

	    
    </LinearLayout>
   	    
</LinearLayout>