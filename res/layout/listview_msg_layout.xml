<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
 
    <TextView
        android:id="@+id/msg_rowid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />
 
    <TextView
        android:id="@+id/msg_msgtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/msg_rowid"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />
    
    <TextView
        android:id="@+id/msg_msgtarget"	
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/msg_msgtype"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />
 
    <TextView
        android:id="@+id/msg_msgcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/msg_msgtarget"
        android:layout_centerVertical="true" 
        />
 
</RelativeLayout>